<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewUnchangeableAttributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello everyone hier are unchangable attributes"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textViewChangeableAttributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello everyone hier are changable attributes"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1" />
</androidx.constraintlayout.widget.ConstraintLayout>